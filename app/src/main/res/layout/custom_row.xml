<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="103dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/texttytul"
        android:layout_marginStart="0dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/texttytul"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Tytul" />

    <TextView
        android:id="@+id/textautor"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_usun"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-78dp"
        android:text="Autor" />

    <TextView
        android:id="@+id/textgatunek"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_usun"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <Button
        android:id="@+id/button_dodaj_okladke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="21dp"
        android:text="Dodaj okładkę" />

    <Button
        android:id="@+id/button_usun_okladke"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginEnd="51dp"
        android:text="Usuń okładkę" />

    <Button
        android:id="@+id/button_edytuj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginEnd="13dp"
        android:text="Edytuj" />

    <Button
        android:id="@+id/button_usun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_edytuj"
        android:layout_marginTop="78dp"
        android:text="Usuń" />
</RelativeLayout>