<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="171dp"

                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/button_dodaj_okladke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:onClick="add_cover"
                android:text="Dodaj okładkę" />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:ems="10"
                android:inputType="text"
                android:text="Tytuł" />

            <EditText
                android:id="@+id/edit_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:inputType="text"
                android:text="Autor" />

            <EditText
                android:id="@+id/edit_gatunek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"
                android:text="Gatunek" />
            <EditText
                android:id="@+id/edit_wydawca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"
                android:text="Wydawca" />

            <EditText
                android:id="@+id/edit_rok_wyadania"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"
                android:text="Rok Wydania" />
            <EditText
                android:id="@+id/edit_nr_wydania"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"
                android:text="Nr Wydania" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Lub dodaj nr ISBN" />

            <EditText
                android:id="@+id/edit_isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"
                android:text="ISBN" />

            <Button
                android:id="@+id/button_edytuj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zapisz zmiany" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>